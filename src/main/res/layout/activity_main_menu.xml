<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Clothing Store App!"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/buttonAddProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Product"
        android:layout_below="@id/buttonViewProfile"
        android:onClick="onAddProductClick" />

    <Button
        android:id="@+id/buttonBrowseProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Products"
        android:layout_below="@id/textViewWelcome"
        android:onClick="onBrowseProductsClick" />

    <Button
        android:id="@+id/buttonViewCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Shopping Cart"
        android:layout_below="@id/buttonBrowseProducts"
        android:onClick="onViewCartClick" />

    <Button
        android:id="@+id/buttonViewProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Profile"
        android:layout_below="@id/buttonViewCart"
        android:onClick="onViewProfileClick" />

</RelativeLayout>
